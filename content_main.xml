<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kunalkumar.imagespinner.MainActivity"
    android:background="#934bca"
    android:id="@+id/frontlayer">

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="play"
        android:id="@+id/play"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#89d3e2"
        android:textColor="#070707"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/display"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/display" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="high score"
        android:id="@+id/highscore"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:background="#89d3e2"
        android:textSize="20dp"
        android:textColor="#070707" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="EXIT"
        android:id="@+id/Exit"
        android:background="#89d3e2"
        android:textSize="20dp"
        android:textColor="#070707"
        android:layout_below="@+id/help"
        android:layout_alignLeft="@+id/help"
        android:layout_alignStart="@+id/help"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="help"
        android:id="@+id/help"
        android:background="#89d3e2"
        android:textColor="#060606"
        android:textSize="20dp"
        android:layout_below="@+id/highscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

</RelativeLayout>
