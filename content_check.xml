<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kunalkumar.imagespinner.check"
    android:background="#934bca">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TICK THE IMAGES"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#051df7"
        android:textColor="#050505"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textAlignment="center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submit"
        android:layout_alignTop="@+id/playagain"
        android:layout_alignRight="@+id/rad8"
        android:layout_alignEnd="@+id/rad8" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="PLAY AGAIN"
        android:id="@+id/playagain"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/rad16"
        android:layout_alignLeft="@+id/rad16"
        android:layout_alignStart="@+id/rad16"
        android:enabled="false" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="WATCH"
        android:id="@+id/rad1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BALL"
        android:id="@+id/rad2"
        android:layout_below="@+id/rad1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BIRD"
        android:id="@+id/rad3"
        android:layout_below="@+id/rad2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="CHAIR"
        android:id="@+id/rad4"
        android:layout_below="@+id/rad3"
        android:layout_alignRight="@+id/rad3"
        android:layout_alignEnd="@+id/rad3" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="CUBE"
        android:id="@+id/rad5"
        android:layout_below="@+id/rad4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="FLAG"
        android:id="@+id/rad6"
        android:layout_below="@+id/rad5"
        android:layout_alignRight="@+id/rad5"
        android:layout_alignEnd="@+id/rad5" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="DICE"
        android:id="@+id/rad7"
        android:layout_below="@+id/rad6"
        android:layout_alignRight="@+id/rad6"
        android:layout_alignEnd="@+id/rad6" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ROSE"
        android:id="@+id/rad8"
        android:layout_below="@+id/rad7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TORTOISE"
        android:id="@+id/rad9"
        android:layout_alignTop="@+id/rad1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="KEY"
        android:id="@+id/rad10"
        android:layout_below="@+id/rad9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BUS"
        android:id="@+id/rad11"
        android:layout_below="@+id/rad10"
        android:layout_alignLeft="@+id/rad10"
        android:layout_alignStart="@+id/rad10" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SPOON"
        android:id="@+id/rad12"
        android:layout_alignTop="@+id/rad4"
        android:layout_alignLeft="@+id/rad9"
        android:layout_alignStart="@+id/rad9" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="NAILS"
        android:id="@+id/rad13"
        android:layout_below="@+id/rad12"
        android:layout_alignLeft="@+id/rad11"
        android:layout_alignStart="@+id/rad11" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="GLOVES"
        android:id="@+id/rad14"
        android:layout_below="@+id/rad13"
        android:layout_alignLeft="@+id/rad12"
        android:layout_alignStart="@+id/rad12" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BOOK"
        android:id="@+id/rad15"
        android:layout_below="@+id/rad14"
        android:layout_alignLeft="@+id/rad14"
        android:layout_alignStart="@+id/rad14" />

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PILLOW"
        android:id="@+id/rad16"
        android:layout_below="@+id/rad15"
        android:layout_alignLeft="@+id/rad15"
        android:layout_alignStart="@+id/rad15" />

</RelativeLayout>
